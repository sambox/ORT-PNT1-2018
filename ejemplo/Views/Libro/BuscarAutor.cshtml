
@{
    ViewBag.Title = "Buscar Autor";
}

<br />
<div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body">
            <form id="formBuscarAutor">
                <div class="form-group">
                    <label for="nombre">Autor</label>
                    <input type="text" class="form-control validacion-texto" id="autor" placeholder="Edgar Allan Poe">
                </div>
                <div class="form-group"><button type="submit" class="btn btn-primary" id="btnBuscarAutor">Buscar</button></div>
            </form>
        </div>
    </div>
</div>