    <div class="modal fade" tabindex="-1" role="dialog" id="modalNuevoLibro">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Nuevo libro</h4>
                </div>
                <div class="modal-body">

                    <form>
                        <div class="form-group">
                            <label for="titulo">Titulo</label>
                            <input type="text" class="form-control validacion-vacio" id="titulo" placeholder="Libro">
                        </div>
                        <div class="form-group">
                            <label for="autor">Autor</label>
                            <input type="text" class="form-control validacion-texto" id="autor" placeholder="Perez">
                        </div>
                        <div class="form-group">
                            <label for="isbn">ISBN</label>
                            <input type="text" class="form-control validacion-vacio" id="isbn" placeholder="AN215">
                        </div>
                        <div class="form-group">
                            <label for="genero">Genero</label>
                            <input type="text" class="form-control validacion-texto" id="genero" placeholder="Terror">
                        </div>
                        <div class="form-group">
                            <label for="ejemplares">Ejemplares</label>
                            <input type="text" class="form-control validacion-numerica" id="ejemplares" placeholder="8">
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>



