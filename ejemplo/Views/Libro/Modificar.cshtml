@model ejemplo.Models.LibroViewModel
<br />
<div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
        <div class="panel-heading">
            Modificar Libro
        </div>
        <div class="panel-body">
            <form id="formNuevoLibro" method="post" action="Modificar/">
                <input type="hidden" name="LibroId" value="@Model.LibroId" />
                <div class="form-group">
                    <label for="titulo">Titulo</label>
                    <input type="text" class="form-control validacion-vacio" id="titulo" placeholder="Libro" name="titulo" value="@Model.titulo">
                </div>
                <div class="form-group">
                    <label for="autor">Autor</label>
                    <input type="text" class="form-control validacion-texto" id="autor" placeholder="Perez" name="autor" value="@Model.autor">
                </div>
                <div class="form-group">
                    <label for="isbn">ISBN</label>
                    <input type="text" class="form-control validacion-vacio" id="isbn" placeholder="AN215" name="isbn" value="@Model.isbn">
                </div>
                <div class="form-group">
                    <label for="genero">Genero</label>
                    <input type="text" class="form-control validacion-texto" id="genero" placeholder="Terror" name="genero" value="@Model.genero">
                </div>
                <div class="form-group">
                    <label for="ejemplares">Ejemplares</label>
                    <input type="number" class="form-control validacion-numerica" id="ejemplares" placeholder="8" name="cantEjemplares" value="@Model.cantEjemplares">
                </div>
                <div class="form-group"><button type="submit" class="btn btn-primary btnNuevoLibro">Guardar</button></div>
            </form>
        </div>
    </div>
</div>