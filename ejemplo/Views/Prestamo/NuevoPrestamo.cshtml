@model ejemplo.Models.PrestamoViewModel
@{
    ViewBag.Title = "Nuevo Prestamo";
}
<br />
<div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body">
            <form id="formNuevoPrestamo" method="post" action="">
                <div class="form-group">
                    <label for="nroDocUsuario">Usuario</label>
                    <select class="form-control validacion-combo" id="nroDocUsuario" name="UsuarioId">
                        <option value="0">Seleccionar</option>
                        @foreach (var usuario in Model.usuarios)
                        {
                        <option value="@Html.DisplayFor(modelItem => usuario.UsuarioId)">@Html.DisplayFor(modelItem => usuario.nombre) @Html.DisplayFor(modelItem => usuario.apellido)</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="isbnLibro">Libro</label>
                    <select class="form-control validacion-combo" id="isbnLibro" name="LibroId">
                        <option value="0">Seleccionar</option>
                        @foreach (var libro in Model.libros)
                        {
                            <option value="@Html.DisplayFor(modelItem => libro.LibroId)">@Html.DisplayFor(modelItem => libro.titulo) - @Html.DisplayFor(modelItem => libro.autor)</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="fecha Prestamo">Fecha Prestamo</label>
                    <input type="text" class="form-control validacion-fecha" id="fechaPrestamo" name="fechaPrestamoString" placeholder="dd/mm/yyyy">
                </div>
                <div class="form-group"><button type="submit" class="btn btn-primary" id="">Guardar</button></div>
            </form>
        </div>
    </div>
</div>