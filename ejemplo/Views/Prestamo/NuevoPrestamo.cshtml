@model ejemplo.Models.NuevoPrestamoFormViewModel
@{
    ViewBag.Title = "NuevoPrestamo";
}
<br />
<div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body">
            <form id="formNuevoPrestamo" method="post" action="Prestamo/">
                <div class="form-group">
                    <label for="nroDocUsuario">Usuario</label>
                    @Html.DropDownListFor(x=>x.libroID, Model.libros, "UsuarioId", "nombre", new {width="100px;" })
                    @Html.TextBoxFor(x=>x.libros)
                    @Html.ValidationMessageFor(x=>x.libros)
                    <select class="form-control validacion-combo" id="nroDocUsuario">
                        <option value="0">Seleccionar</option>
                        @foreach (var usuario in Model.usuarios)
                        {
                            <option value="@Html.DisplayFor(modelItem => usuario.UsuarioId)">@Html.DisplayFor(modelItem => usuario.nombre)</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="isbnLibro">Libro</label>
                    <select class="form-control validacion-combo" id="isbnLibro">
                        <option value="0">Seleccionar</option>
                        @foreach (var libro in Model.libros)
                        {
                            <option value="@Html.DisplayFor(modelItem => libro.LibroID)">@Html.DisplayFor(modelItem => libro.titulo) - @Html.DisplayFor(modelItem => libro.autor)</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="ejemplares">Ejemplares</label>
                    <input type="number" class="form-control validacion-numerica" id="ejemplares" placeholder="1">
                </div>
                <div class="form-group">
                    <label for="fecha Prestamo">Fecha Prestamo</label>
                    <input type="text" class="form-control validacion-fecha" id="fechaPrestamo" placeholder="dd/mm/yyyy">
                </div>
                <div class="form-group"><button type="submit" class="btn btn-primary" id="btnNuevoPrestamo">Guardar</button></div>
            </form>
        </div>
    </div>
</div>