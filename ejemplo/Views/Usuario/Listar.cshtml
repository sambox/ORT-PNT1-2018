<div class="modal fade" tabindex="-1" role="dialog" id="modalNuevoUsuario">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Nuevo usuario</h4>
            </div>
            <div class="modal-body">

                <form id="formNuevoUsuario">
                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control validacion-texto" id="nombre" placeholder="Juan">
                    </div>
                    <div class="form-group">
                        <label for="apellido">Apellido</label>
                        <input type="text" class="form-control validacion-texto" id="apellido" placeholder="Perez">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control validacion-email" id="email" placeholder="ejemplo@mimail.com">
                    </div>
                    <div class="form-group">
                        <label for="tipoDni">Tipo documento</label>
                        <select class="form-control validacion-combo" id="tipoDni">
                            <option value="0">Seleccionar</option>
                            <option value="dni">DNI</option>
                            <option value="pas">Pasaporte</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="dni">Número documento</label>
                        <input type="text" class="form-control validacion-numerica" id="dni" placeholder="12341234">
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSubmitNuevoUsuario">Guardar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
