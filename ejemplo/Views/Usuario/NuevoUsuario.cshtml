<br />
<div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body">
            <form id="formNuevoUsuario" method="post" action="">
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control validacion-texto" id="nombre" name="nombre" placeholder="Juan">
                </div>
                <div class="form-group">
                    <label for="apellido">Apellido</label>
                    <input type="text" class="form-control validacion-texto" id="apellido" name="apellido" placeholder="Perez">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control validacion-email" id="email" name="email" placeholder="ejemplo@mimail.com">
                </div>
                <div class="form-group">
                    <label for="tipoDoc">Tipo documento</label>
                    <select class="form-control validacion-combo" id="tipoDoc" name="tipoDocumento">
                        <option value="0">Seleccionar</option>
                        <option value="DNI">DNI</option>
                        <option value="PASAPORTE">PASAPORTE</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="dni">Número documento</label>
                    <input type="text" class="form-control validacion-numerica" id="nroDoc" name="numeroDocumento" placeholder="12341234">
                </div>
                <div class="form-group"><button type="submit" class="btn btn-primary btnNuevoUsuario">Guardar</button></div>
            </form>
        </div>
    </div>
</div>